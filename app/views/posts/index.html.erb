<% @posts.each do |post| %>
	<div class="container">
		<h1><%= post.title %></h1>
		<p>
		Submitted <%= time_ago_in_words(post.created_at) %> ago |
				<%= link_to 'Edit', edit_post_path(post) %> |
				<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure, bro' } %>
			</p>
		<br />
		<%= post.body %>
	</div>
<% end %>